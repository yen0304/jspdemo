<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="null" extends="struts-default">
        <!--這裡的name自定義、儘量與Action中的name相同，method定位到所處action中的class的具體方法，result的name為return 後返回的方法名稱-->
        <action name="helloWord" class="com.demo.sshdemo.action.HelloWordAction" method="helloWord">
            <result name="success">helloword.jsp</result>
        </action>
    </package>
</struts>